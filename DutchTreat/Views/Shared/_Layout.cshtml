<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Dutch Treat: @ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/fortawesome/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    @RenderSection("head", false)
</head>
<body>
    <div class="container-fluid">
        <header class="row">
            <nav class="navbar navbar-dark bg-dark navbar-expand-md">
                <h1 class="navbar-brand"> <i class="fas fa-paint-brush "></i> Welcome to Dutch Treat</h1>
                <button class="navbar-toggler" data-toggle="collapse" data-target="#theMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div id="theMenu" class="navbar-collapse collapse">
                    <ul class="navbar-nav">
                        <li class="navbar-item"><a class="nav-link" asp-controller="App" asp-action="Index">Home</a></li>
                        <li class="navbar-item"><a class="nav-link" asp-controller="App" asp-action="Contact">Contact</a></li>
                        <li class="navbar-item"><a class="nav-link" asp-controller="App" asp-action="About">About</a></li>
                        <li class="navbar-item"><a class="nav-link" asp-controller="App" asp-action="Shop">Shop</a></li>
                        @if (User is not null && User.Identity is not null && User.Identity.IsAuthenticated)
                        {
                            <li class="navbar-item"><a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a></li>    
                        }
                        else
                        {
                            <li class="navbar-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Login</a></li>    
                        }
                        
                    </ul>
                </div>
            </nav>
        </header>
        <section class="row">
            <h2 class="text-center">@ViewBag.Title</h2>
            @RenderBody()
        </section>
        <footer class="row">
            <div class="text-center">Copywrong 2017 Dutch Treat LLC</div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/index.js"></script>
    @RenderSection("Scripts", false)
</body>

</html>